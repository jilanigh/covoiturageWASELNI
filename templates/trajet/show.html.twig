    <h1>Trajet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trajet.id }}</td>
            </tr>
            <tr>
                <th>Depart</th>
                <td>{{ trajet.depart }}</td>
            </tr>
            <tr>
                <th>Arrivee</th>
                <td>{{ trajet.arrivee }}</td>
