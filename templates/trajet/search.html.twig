{# templates/trajet/search.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Search Trips{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Search Trips</h1>

        {{ form_start(form, {'attr': {'id': 'search-form'}}) }}
        <div class="form-group">
            {{ form_label(form.depart) }}
            {{ form_widget(form.depart, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.arrivee) }}
            {{ form_widget(form.arrivee, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_end(form) }}

        <h2 class="mt-5">Available Trips</h2>
        <ul id="results-container" class="list-group"></ul>
    </div>

    <script src="{{ asset('js/search.js') }}"></script>
{% endblock %}